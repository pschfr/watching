%header
  %h1
    = settings.title
    -# If on index page, show the sort dropdown.
    - if request.path_info == '/'
      %label{:for => 'sort'}
        Sort:
        %select{:name => 'sort', :id => 'sort'}
          %option{:value => ''} Default
          %option{:value => 'asc'} Ascending
          %option{:value => 'desc'} Descending
