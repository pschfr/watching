source 'https://rubygems.org'

# Restarts the app on changes
group :development, :test do
  gem 'rerun'
end

# DSL for quickly creating web apps
gem 'sinatra'

# Common extensions for Sinatra
gem 'sinatra-contrib'

# Actual API connecting to The Movie Database
gem 'tmdb-api'

# Asset (CSS and JS) handler
gem 'sprockets'

# CSS preprocessor
gem 'sass'

# These gems come from rails-assets.org instead
source 'https://rails-assets.org' do
  # Image lazy loading functionality
  gem 'rails-assets-echojs'
  # Normalize.css, but SCSS for usage with Sass
  gem 'rails-assets-normalize-scss'
end
